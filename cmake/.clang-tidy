Checks: >
  *,-misc-no-recursion,-cppcoreguidelines-pro-bounds-constant-array-index,
  -llvmlibc-*,-modernize-use-trailing-return-type,-readability-identifier-length,
  -altera-*,-modernize-use-nodiscard,-fuchsia-overloaded-operator,
  -modernize-pass-by-value,-fuchsia-default-arguments-calls,
  -cppcoreguidelines-pro-bounds-pointer-arithmetic,
  -fuchsia-statically-constructed-objects, -fuchsia-multiple-inheritance,
  -bugprone-easily-swappable-parameters
HeaderFilterRegex: '^(?!.*external).*'
FormatStyle: 'file'
CheckOptions: 
  - key: cppcoreguidelines-non-private-member-variables-in-classes.IgnoreClassesWithAllMemberVariablesBeingPublic
    value: '1'
  - key: misc-non-private-member-variables-in-classes.IgnoreClassesWithAllMemberVariablesBeingPublic
    value: '1'
  - key: readability-identifier-naming.VariableCase
    value: lower_case
  - key: readability-identifier-naming.ConstantCase
    value: lower_case
  - key: readability-identifier-naming.MemberPrefix
    value: m_
  - key: readability-identifier-naming.MemberCase
    value: lower_case
  - key: readability-identifier-naming.PrivateMemberPrefix
    value: m_
  - key: readability-identifier-naming.PrivateMemberCase
    value: lower_case
  - key: readability-identifier-naming.GlobalConstantCase
    value: UPPER_CASE
  - key: readability-identifier-naming.FunctionCase
    value: camelBack
  - key: readability-identifier-naming.ClassCase
    value: CamelCase
  - key: readability-identifier-naming.StructCase
    value: CamelCase
  - key: readability-identifier-naming.ClassMethodCase
    value: camelBack
  - key: readability-identifier-naming.PrivateMethodCase
    value: camelBack
WarningsAsErrors: '*'
